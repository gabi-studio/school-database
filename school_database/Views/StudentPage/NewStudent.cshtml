<div id="containershow">
    <nav>
        <a class="navlink" href="/StudentPage/List">Back to Students</a>
    </nav>
    <h2>Add New Student</h2>
    <form method="POST" action="/StudentPage/Create">
        <div class="inputrow">
            <label for="StudentFName">First Name:</label>
            <input type="text" id="StudentFName" name="StudentFName" required />
        </div>

        <div class="inputrow">
            <label for="StudentLName">Last Name:</label>
            <input type="text" id="StudentLName" name="StudentLName" required />
        </div>

        <div class="inputrow">
            <label for="StudentNumber">Student Number:</label>
            <input type="text" id="StudentNumber" name="StudentNumber" required />
        </div>

        <div class="inputrow">
            <label for="EnrollDate">Enroll Date:</label>
            <input type="date" id="EnrollDate" name="EnrollDate" required />
        </div>

        <div class="inputrow">
            <input type="submit" value="Add Student" />
        </div>
    </form>
</div>
